<Page
    x:Class="WebUwp.Views.UserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebUwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Margin="20,0,0,0">
        <TextBlock x:ConnectionId='2' x:Name="Welcome" Text="Welcome" Style="{StaticResource TitleTextBlockStyle}" />
        <TextBlock x:ConnectionId='3' x:Name="UserId" Text="userid" Style="{StaticResource SubtitleTextBlockStyle}" />
        <TextBlock x:ConnectionId='4' x:Name="FirstName" Text="firstname" Style="{StaticResource SubtitleTextBlockStyle}" />
        <TextBlock x:ConnectionId='5' x:Name="LastName" Text="lastname" Style="{StaticResource SubtitleTextBlockStyle}" />
        <TextBlock x:ConnectionId='6' x:Name="Username" Text="username" Style="{StaticResource SubtitleTextBlockStyle}" />
        <TextBlock x:ConnectionId='7' x:Name="ExceptionBlock"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button x:ConnectionId='8' Content="Create Collective" Margin="0,24"                               />
            <Button x:ConnectionId='9' Content="Join Collective" Margin="0,24"                             />
            <Button x:ConnectionId='10' Content="Your Collectives" Margin="0,24"                              />
            <Button x:ConnectionId='11' Content="Update User" Margin="0,24"                         />
            <Button x:ConnectionId='12' Content="Logout" Margin="0,24"                     />
        </StackPanel>
    </StackPanel>
</Page>

