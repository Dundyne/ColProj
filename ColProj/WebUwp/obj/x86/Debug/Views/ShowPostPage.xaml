<Page
    x:Class="WebUwp.Views.ShowPostPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebUwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Margin="20,0,0,0">
        <TextBlock x:ConnectionId='2' x:Name="Title" Text="Title" Style="{StaticResource TitleTextBlockStyle}" />
        <TextBlock x:ConnectionId='3' x:Name="Submitted" Text="Submitted by:" Style="{StaticResource BodyTextStyle}" />
        <TextBox x:ConnectionId='4' x:Name="Content" Text="Content" IsReadOnly="True" />
        <StackPanel Orientation="Horizontal">
            <Button x:ConnectionId='5' Content="Back" Margin="0,24"                   />
            
        </StackPanel>
    </StackPanel>
</Page>

