<Page
    x:Class="WebUwp.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <StackPanel Margin="20,0,0,0">
        <TextBlock Text="Register" Style="{StaticResource TitleTextBlockStyle}" />
        <TextBox x:ConnectionId='2' x:Name="FirstName" Header= "First Name" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" InputScope="NameOrPhoneNumber"                                     />
        <TextBox x:ConnectionId='3' x:Name="LastName" Header="Last Name" Margin="0,24,0,0" MaxLength="15" Width="400" HorizontalAlignment="Left" InputScope="NameOrPhoneNumber"                                    />
        <TextBox x:ConnectionId='4' x:Name="Username" Header="Username" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="NameOrPhoneNumber"                                    />
        <PasswordBox x:ConnectionId='5' x:Name="Password" Header="Password" PlaceholderText="Password" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="Password"                                            />
        <StackPanel Orientation="Horizontal">
            <Button x:ConnectionId='6' Content="Save" Margin="0,24"                         />
            <Button x:ConnectionId='7' Content="Cancel" Margin="24"                           />
            <TextBlock x:ConnectionId='8' x:Name="ExceptionBlock"></TextBlock>
        </StackPanel>
    </StackPanel>


</Page>

