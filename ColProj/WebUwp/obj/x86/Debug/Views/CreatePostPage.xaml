<Page
    x:Class="WebUwp.Views.CreatePostPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <StackPanel Margin="20,0,0,0">
        <TextBlock Text="Create a Post" Style="{StaticResource TitleTextBlockStyle}" />
        <TextBox x:ConnectionId='2' x:Name="Title" Header="Title" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="NameOrPhoneNumber"                                 />
        <TextBox x:ConnectionId='3' x:Name="Content" Header="Content" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="NameOrPhoneNumber"                                   />
        <StackPanel Orientation="Horizontal">
            <Button x:ConnectionId='4' Content="Create" Margin="0,24"                         />
            <Button x:ConnectionId='5' Content="Cancel" Margin="24"                     />
            <TextBlock x:ConnectionId='6' x:Name="ExceptionBlock"></TextBlock>
        </StackPanel>
    </StackPanel>
</Page>

